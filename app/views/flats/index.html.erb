<div class="container">
  <h1>Explore the world</h1>
  <p>We have identified <%= @flats.count %> homes verified for quality and comfort!</p>
</div>
<div class="big-box">
  <div class="container">
    <div class="row">
      <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <div class="card-flat" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1464890100898-a385f744067f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2850&q=80)">
            <div class="card-description">
              <h2><%= flat.title %></h2>
            </div>
          </div>
          <div class="details-flat flex">
            <i class="fas fa-female"> <%= flat.number_of_guests%></i>
            <i class="fas fa-dollar-sign"> <%= flat.price_per_night %>/night</i>
          </div>
            <%= link_to 'flat', flat_path(flat.id), class: "card-link" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div id="map"></div>
</div>
<script>
function initMap() {
// Create a map object and specify the DOM element for display.
var map = new google.maps.Map(document.getElementById('map'), {
center: {lat: 52.5206, lng: 13.4098},
scrollwheel: false,
zoom: 8
});
}
</script>
<script async defer
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
</script>
