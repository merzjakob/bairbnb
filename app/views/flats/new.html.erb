
<h1> Add your flat!</h1>
<div class="container">
  <%= simple_form_for [@flat] do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :number_of_guests %>
    <%= f.input :price_per_night %>
    <%= f.input :city %>
    <%= f.input :address %>
    <%= f.submit "Go to next step", class: "btn btn-primary" %>
  <% end %>
</div>
